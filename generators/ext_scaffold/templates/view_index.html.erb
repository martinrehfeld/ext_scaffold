<%% content_for :head do %>
  <%%= javascript_include_tag '<%= "ext_scaffold/#{controller_class_path}.js" %>' %>
  <%% javascript_tag do %>
    Ext.onReady(function() {

      Ext.state.Manager.setProvider(new Ext.state.CookieProvider());
      Ext.QuickTips.init();

      var vp = new Ext.Viewport({
        layout: 'fit',
        items: new ExtScaffold.Posts({
          url: '<%%= reloaded_posts_path %>'
          <%%= ",baseParams: { #{request_forgery_protection_token}: '#{form_authenticity_token}' }" if protect_against_forgery? %>
        }),
        renderTo: Ext.getBody()
      });
    });
  <%% end %>
<%% end %>

